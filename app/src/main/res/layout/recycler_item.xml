<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:elevation="6dp"
    android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_drag_item"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/drag"
            android:layout_height="220dp" />
        <LinearLayout
            android:id="@+id/linear_drag_item"
            android:layout_alignLeft="@id/image_drag_item"
            android:layout_alignBottom="@id/image_drag_item"
            android:background="#4f0e0d0e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_drag_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:text="Description"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>